{
  "manifest_version": 3,
  "name": "小红书博主数据分析",
  "version": "1.0",
  "description": "分析小红书博主数据是否符合要求",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://pgy.xiaohongshu.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://pgy.xiaohongshu.com/*"],
      "js": ["content.js"]
    }
  ]
} 